
#include <iostream>
#include<string>
#include<cstdlib>
#include <ctime>
using namespace std;


enum enRandom {
	CapitalLetter = 1,
	SamallLetter = 2,
	Digit = 3 ,
	SpecialCharacter = 4
};

int RandomNumber(int From, int To)
{

	int RandNum = rand() % (To - From + 1) + From;
	return RandNum;
}


char GetRandom(enRandom CharType) {

	switch (CharType) {
			case enRandom::SamallLetter:
			{
			return char(RandomNumber(97, 122));
			break;
				}
			case enRandom::CapitalLetter:
			{
				return char(RandomNumber(65, 90));
				break;
			}
			case enRandom::Digit:
			{
				return char(RandomNumber(48, 57));
				break;
			}
			case enRandom::SpecialCharacter:
			{
				return char(RandomNumber(33, 47));
				break;
			}
	}
}

int main()
{
	srand((unsigned)time(NULL));


	cout << GetRandom(enRandom::SamallLetter) << endl;
	cout << GetRandom(enRandom::CapitalLetter) << endl;
	cout << GetRandom(enRandom::Digit) << endl;
	cout << GetRandom(enRandom::SpecialCharacter) << endl;
	
	

}

