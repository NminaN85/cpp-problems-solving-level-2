
#include <iostream>
#include <cmath>
using namespace std;


int GetPossitiveNumber(string Message) {
	int Number;
	do {
		cout << Message;
		cin >> Number;
	} while (Number <= 0);
	return  Number;
}

void PrintPattern(int Number) {



	for (int i = Number ; i >= 1; i--) {

		
		for (int j = 1 ; j <=i  ; j++) {

			cout << (char)(i + 64);
		}
		cout << endl;
	}
	

}



int main()
{


	PrintPattern(GetPossitiveNumber("Please enter a number : "));


	return 0;
}

