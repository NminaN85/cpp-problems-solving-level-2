
#include <iostream>
using namespace std;


int GetPossitiveNumber(string Message) {
	int Number;
	do {
		cout<<Message;
		cin >> Number;
	} while (Number <= 0);
	return Number;
}

int SumOfDigits(int Number){
int Remainder = 0;
int sum = 0;

while (Number > 0) {
	Remainder = Number % 10; 
	sum += Remainder;
	Number = Number / 10;
}
return sum;
}
void PrintSumOfDigits(int sum) {
	cout << "Sum of Digits " << sum << endl;
}



int main()
{

	PrintSumOfDigits(SumOfDigits(GetPossitiveNumber("Please enter a number : ")));
}

