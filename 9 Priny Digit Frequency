
#include <iostream>
#include <cmath>
using namespace std;


int GetPossitiveNumber(string Message) {
	int Number;
	do {
		cout<<Message;
		cin >> Number;
	} while (Number <= 0);
	return  Number;
}

int GetFrequancy(int Number , int NumberToCount){
int Remainder = 0;
int Frequancy = 0;

while (Number > 0) {
	Remainder = Number % 10;
	Number = Number / 10;
	if (NumberToCount == Remainder)
		Frequancy++;
}

return Frequancy;

}

void Print(int Number) {

	for (int i = 0; i < 10; i++) {

		short DigitFrequency = 0;
	    DigitFrequency = GetFrequancy( Number , i);

		if (DigitFrequency > 0) {

			cout << "digit   " << i << "  Frequency Is " << DigitFrequency << endl; 
		}
		 
	}
}




int main()
{

	int Number = GetPossitiveNumber("Please enter a number : ");

	Print(Number);


	return 0;
}

