#include <iostream>
#include<string>
#include<cstdlib>
#include <ctime>
using namespace std;


enum enPrimNotPrime { Prime = 1, NotPrime = 2 };

int RandomNumber(int From, int To)
{

	int RandNum = rand() % (To - From + 1) + From;
	return RandNum;
}


void ReadArry(int Arry[100] ,  int &ArryLength) {

	cout << "Please Enter Number of Elements : ";
	cin >> ArryLength;

	for (int i = 0; i < ArryLength; i++) {
		Arry[i]= RandomNumber(1, 100);
	}
}


enPrimNotPrime IsPrime(int Number) {
	int HalfNumber = round(Number / 2);
	for (int counter = 2; counter <= HalfNumber; counter++) {
		if (Number % counter == 0)
			return enPrimNotPrime::NotPrime;
	}
	return enPrimNotPrime::Prime;
}


void CopyArray(int ArrSource[100], int ArrDestination[100], int ArryLength , int& Arr2Lenght) {

	int Counter = 0;

	for (int i = 0; i < ArryLength; i++) {
		if (IsPrime(ArrSource[i]) == enPrimNotPrime::Prime) {
ArrDestination[Counter] = ArrSource[i];
	Counter++;
	}
		
	}

	Arr2Lenght = --Counter;
	
	
}
void PrintArry(int Arry[100], int ArryLength) {
	for (int i = 0; i < ArryLength; i++) {
		cout << Arry[i];
		if (i < ArryLength - 1) cout << " , ";
		else cout << " ";
	}
}


int main() {
	srand((unsigned)time(NULL));

	int Arry[100];
	int ArryLength;
	int Sum;
	int Arr2Length = 0;
	
	ReadArry(Arry, ArryLength);
	int Arr2[100];
	CopyArray(Arry, Arr2, ArryLength,  Arr2Length );
	cout << " Arry Is : [ ";
	PrintArry(Arry, ArryLength);
	cout<<" ]"<<endl;
	cout << " Coppied Array : [ ";
	PrintArry(Arr2, Arr2Length);
	cout << " ]" << endl;
	return 0;
}
