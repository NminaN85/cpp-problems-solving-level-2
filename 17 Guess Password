
#include <iostream>
#include <cmath>
using namespace std;

string ReadPassword() {
	string Password;
	cout << "Please Enter A Password ";
		cin >> Password;

		return Password;

}

bool GessPassword(string Password) {
	
		string Word = "";
		int counter = 0;

	cout << "\n";

	for (int i = 65; i <= 90; i++) {
		for (int j = 65 ; j <= 90 ; j++) {
			for (int x = 65; x <= 90; x++) {


				Word = Word + (char)i;
				Word = Word + (char)j;
				Word = Word + (char)x;

				counter++;
				cout << "Trial "<< counter << " is "<< Word << endl;


				if (Word == Password) {
					cout << "Pasword Is" << Word << endl;
					cout << "Founded in trial [ " << counter <<" ]"<< endl;
					return true;
			}
				Word = "";
			
		}
	}
	
	}
	return false;

}



int main()
{
	GessPassword(ReadPassword());
			
		

	return 0;
}

