
#include <iostream>
#include<string>
#include<cstdlib>
#include <ctime>
using namespace std;

int ReadPossitiveNumber(string Message) {
	int Number;
	do {
		cout << Message;
		cin >> Number;
	} while (Number <= 0);
	return  Number;
}
void ReadArry(int Arry[100], int& ArryLength) { 
	cout << "Please Enter Arry Length : ";
	cin >> ArryLength; 
	cout << "Please Enter Elements " << endl; 
	for (int i = 0; i < ArryLength; i++) { 
		cout << "Element [ " << (i + 1) << " ] : " << endl;
		cin >> Arry[i];
	} cout << endl; 
}
void PrintArry(int Arry[100], int ArryLength) {
	for (int i = 0; i < ArryLength; i++) {
		cout << Arry[i] << " ";
	}
}
int TimesRepeats(int Number, int Arr[100], int Arrlength) {
	int counter = 0;
	for (int i = 0; i < Arrlength; i++) {
		if (Number == Arr[i])
			counter++;
	}return counter;
}
int main()
{
	srand((unsigned)time(NULL));

	int Arr[100];
	int Arrlength;
	int NumberToCheck;

	ReadArry(Arr, Arrlength);

	NumberToCheck = ReadPossitiveNumber("which elemmente you want to check ?");
	cout << "Original Arry Is : ";
	PrintArry(Arr, Arrlength);

	cout << "\n Number is " << NumberToCheck;
	cout << " Is repeated ";
	cout << TimesRepeats(NumberToCheck, Arr, Arrlength);

}

