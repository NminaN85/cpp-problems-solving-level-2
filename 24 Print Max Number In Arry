#include <iostream>
#include<string>
#include<cstdlib>
#include <ctime>
using namespace std;



int RandomNumber(int From, int To)
{

	int RandNum = rand() % (To - From + 1) + From;
	return RandNum;
}


void ReadArry(int Arry[100] ,  int &ArryLength) {

	cout << "Please Enter Number of Elements : ";
	cin >> ArryLength;

	for (int i = 0; i < ArryLength; i++) {
		Arry[i]= RandomNumber(1, 100);
	}
}
void PrintArry(int Arry[100], int ArryLength) {
	for (int i = 0; i < ArryLength; i++) {
		cout << Arry[i] << " ";
	}
}

int MaxOfArray(int Arry[100], int ArryLength) {
	int MaxNumber = Arry[0];

	for (int i = 0; i < ArryLength; i++) {
		if (Arry[i] > MaxNumber)  MaxNumber = Arry[i];
	}
	return MaxNumber;
}




int main() {
	srand((unsigned)time(NULL));

	int Arry[100];
	int ArryLength;

	ReadArry(Arry, ArryLength);
	
	cout << " Arry Is : [ ";
	PrintArry(Arry, ArryLength);

	cout<<" ]"<<endl;
	cout << "Max Number Of Array Is : ";
	cout << MaxOfArray(Arry, ArryLength);
	return 0;


}
